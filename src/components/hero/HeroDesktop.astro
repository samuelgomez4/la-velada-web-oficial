---
import FighterContainer from "./FighterContainer.astro";
import Landing from "./Landing.astro";
import BoxerCard from "./BoxerCard.astro";
import type { Fighter } from "@/types/fighter";

interface Props {
  leftRow: Fighter[];
  rightRow: Fighter[];
  secondRow: Fighter[];
}

const { leftRow, rightRow, secondRow } = Astro.props;
---

<div class="relative flex flex-col items-center p-8 w-full h-full">
    <div class="absolute inset-0 w-full py-32">
      <Landing />
    </div>
    <div class="absolute inset-0">
      <FighterContainer />
    </div>
    <div
      class="relative flex flex-col items-center justify-end p-8 h-full w-full max-w-6xl gap-4"
    >
      <div class="flex flex-wrap justify-between w-full px-4">
        <div class="flex flex-wrap justify-start gap-4">
          {leftRow.map(({ id, name }) => <BoxerCard id={id} name={name} />)}
        </div>
        <div class="flex flex-wrap justify-end gap-4">
          {rightRow.map(({ id, name }) => <BoxerCard id={id} name={name} />)}
        </div>
      </div>

      <div class="flex flex-wrap justify-between gap-4">
        {secondRow.map(({ id, name }) => <BoxerCard id={id} name={name} />)}
      </div>
    </div>
  </div>